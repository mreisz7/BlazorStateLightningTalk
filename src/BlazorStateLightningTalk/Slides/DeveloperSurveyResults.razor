@inherits SlideBase

<div class="full-screen">
    <header class="slide-header">
        <h1 class="slide-title">Stack Overflow Developer Survey 2023 Results</h1>
    </header>
    <div class="slide-content column">
        <a class="@ShowSlideStopElement(1)"
           href="https://survey.stackoverflow.co/2023/#section-most-popular-technologies-web-frameworks-and-technologies"
           target="_blank">
            <img alt="Developer Survey 2023 Framework Usage"
                 class="dev-survey-image"
                 src="img/DeveloperSurveyFrameworkUsage.png" />
        </a>
        <a class="@ShowSlideStopElement(2)"
           href="https://survey.stackoverflow.co/2023/#section-admired-and-desired-web-frameworks-and-technologies"
           target="_blank">
            <img alt="Developer Survey 2023 Framework Desired/Admired"
                 class="dev-survey-image"
                 src="img/DeveloperSurveyFrameworkDesiredAdmired.png" />
        </a>
    </div>
</div>

@code {
    public override int SlideStopMax { get; set; } = 2;
}
