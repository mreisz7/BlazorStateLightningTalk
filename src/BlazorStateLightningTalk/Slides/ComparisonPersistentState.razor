@inherits SlideBase

<div class="full-screen">
    <header class="slide-header">
        <h1 class="slide-title">Comparison: Persistent State</h1>
        <img class="logo"
             src="img/react-logo.png" />
        <img class="logo"
             src="img/blazor-logo.png" />
    </header>
    <div class="slide-content split">
        <div class="split-left">
            <h2>React:</h2>
            <CodeBlock Class="@ShowSlideStopElement(1)"
                       FileName="sharedStateContext.jsx">
                @CodeStrings.sharedStateContextJsx
            </CodeBlock>
            <CodeBlock Class="@ShowSlideStopElement(1)"
                       FileName="consumerComponent.jsx">
                @CodeStrings.comsumerComponentJsx
            </CodeBlock>
            <CodeBlock Class="@ShowSlideStopElement(1)"
                       FileName="app.jsx">
                @CodeStrings.persistentStateAppJsx
            </CodeBlock>
        </div>
        <div class="split-right">
            <h2>Blazor:</h2>
            <CodeBlock Class="@ShowSlideStopElement(2)"
                       FileName="SharedStateProvider.razor">
                @CodeStrings.sharedStateContextRazor
            </CodeBlock>
            <CodeBlock Class="@ShowSlideStopElement(2)"
                       FileName="ConsumerComponent.razor">
                @CodeStrings.comsumerComponentRazor
            </CodeBlock>
            <CodeBlock Class="@ShowSlideStopElement(2)"
                       FileName="App.razor">
                @CodeStrings.persistentStateAppRazor
            </CodeBlock>
        </div>
    </div>
</div>


@code {
    public override int SlideStopMax { get; set; } = 2;
}
