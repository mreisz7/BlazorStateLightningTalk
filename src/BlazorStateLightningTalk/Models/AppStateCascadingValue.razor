<CascadingValue Value="@(this)">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public DateTime Date { get; private set; } = DateTime.Now;

    public void UpdateDate()
    {
        Date = DateTime.Now;
        StateHasChanged();
    }

}
