<CascadingValue Value=@this>
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public TimeOnly Time { get; private set; } = TimeOnly.FromDateTime(DateTime.Now);

    public void UpdateTime()
    {
        Time = TimeOnly.FromDateTime(DateTime.Now);
        StateHasChanged();
    }

}
